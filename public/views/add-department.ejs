<%- include('header') %>
<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="dashboard">Dashboard</a>
  </li>
  <li class="breadcrumb-item">
    <a href="department">Department</a>
  </li>
  <%if(Id>0) { %>
    <li class="breadcrumb-item active">Edit Department</li>
  <% } else { %>
    <li class="breadcrumb-item active">Add Department</li>
  <% } %>
</ol>
<!-- Breadcrumbs-->


    <%if(Id>0) { %>
      <h1>Edit Department</h1>
    <% } else { %>
      <h1>Add Department</h1>
    <% } %>
      <div class="row">
        <div class="col-md-8 mx-auto mt-5">                                                
          <%if(Id>0) { %>
            <% users.forEach(function(user) { %>
              <div class="row">
                <div class="col-md-12 col-sm-12">
                  <div class="card card-box">
                    <div class="card-head">
                      <header>Basic Information</header>
                    </div>
                  <div class="card-body" id="bar-parent">
                    <form action="add-department?Id=<%=Id %>" id="form_sample_1" class="form-horizontal" method="post" onsubmit="return validateDname();">
                      <div class="form-group row">
                        <label class="control-label col-md-3"><strong>Name:</strong><span class="text-danger">*</span></label>
                          <div class="col-md-7">
                            <input class="form-control input-height" name="txtdeptname" value='<%=user.Name%>' id="dname" type="text" placeholder="Department Name" onkeyup="return validateDname();">
                              <span id="errorDname"></span>
                          </div>
                      </div>
            <% }); %>
                    <div class="form-group row">
                      <div class="offset-md-3 col-md-9">
                        <input type="submit" value="Edit" class="btn btn-primary btn-block col-md-3" /> &nbsp;
                          <a href="department" class="btn btn-secondary col-md-3">Cancel</a>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% } else { %>
          <div class="row">
            <div class="col-md-12 col-sm-12">
              <div class="card card-box">
                <div class="card-head">
                  <header>Basic Information</header>
                </div>
              <div class="card-body" id="bar-parent">
                <form action="add-department" id="form_sample_1" class="form-horizontal" method="post" onsubmit="return validateDname();" id="form_sample_1" class="form-horizontal">
                  <div class="form-body">
                    <div class="form-group row">
                      <label class="control-label col-md-3">Name:
                        <span class="required"> * </span>
                      </label>
                      <div class="col-md-7">
                       <input class="form-control input-height" name="txtdeptname" id="dname" type="text" placeholder="Department Name" onkeyup="validateDname();">
                       <span id="errorDname"></span> 
                      </div>
                    </div>
                  <div class="form-actions">
                    <div class="form-group row">
                      <div class="offset-md-3 col-md-9">
                        <input type="submit" value="Add" class="btn btn-info btn-block col-md-3" /> &nbsp;
                          <a href="department" class="btn btn-secondary col-md-3">Cancel</a>
                      </div>
                    </div>
                   </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>      
      <% } %> 
    </div> <!--col-8 -->
  </div> <!--row-->


<%- include('footer') %>