<%- include('header') %>
<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="dashboard">Dashboard</a>
  </li>
  <li class="breadcrumb-item">
    <a href="doctorCategory">Doctor Categories</a>
  </li>
  <%if(Id>0) { %>
    <li class="breadcrumb-item active">Edit Doctor Categories</li>
  <% } else { %>
    <li class="breadcrumb-item active">Add Doctor Categories</li>
  <% } %>
</ol>


<%if(Id>0) { %>
   <h1>Edit Doctor Categories</h1>
<% } else { %>
    <h1>Add Doctor Categories</h1>
<% } %>
<div class="row">
  <div class="col-md-8 mx-auto mt-5">                  
    <%if(Id>0) { %>
      <% users.forEach(function(user) { %> 
        <div class="row">
          <div class="col-md-12 col-md-12">
            <div class="card card-box">
              <div class="card-head">
                <header>Basic Information</header>
              </div>
              <div class="card-body" id="bar-parent">
                <form action="add-doctorCategory?Id=<%=Id %>" method="post" onsubmit="return validateCategory();">
                  <div class="form-group row">
                    <label class="control-label col-md-3"><strong>Name:</strong>
                      <span class="text-danger">*</span>
                    </label>
                    <div class="col-md-7">
                      <input class="form-control input-height" name="txtname" value='<%=user.Name%>' id="cname"    type="text" placeholder="Branch" onkeyup="return validateCategory();">
                      <span id="errorName"></span>                        
                    </div>
                  </div>
      <% }); %>
                  <div class="form-group row">
                    <div class="offset-md-3 col-md-9">
                      <input type="submit" value="Edit" class="btn btn-primary btn-block col-md-3" /> &nbsp;
                      <a href="doctorCategory" class="btn btn-secondary col-md-3">Cancel</a>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } else { %>
    <div class="row">
      <div class="col-md-12 col-md-12">
        <div class="card card-box">
          <div class="card-head">
            <header>Basic Information</header>
          </div>
        <div class="card-body" id="bar-parent">
          <form action="add-doctorCategory" method="post" onsubmit="return validateCategory();">
            <div class="form-group row">
              <label class="control-label col-md-3">Name:
                <span class="required"> * </span>
              </label>
              <div class="col-md-7">
                <input class="form-control input-height" name="txtname" id="cname" type="text" placeholder="Doctor Category Name"  onkeyup="return validateCategory();">
                <span id="errorName"></span>                        
              </div>
            </div>
            <div class="form-group row">
              <div class="offset-md-3 col-md-9">
              <input type="submit" value="Add" class="btn btn-primary btn-block col-md-3" /> &nbsp;
              <a href="doctorCategory" class="btn btn-secondary col-md-3">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<% } %>
</div> <!--col-8 -->
</div> <!--row-->
<%- include('footer') %>